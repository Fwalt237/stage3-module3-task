        <expiry>
            <ttl>1800</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>
    <cache alias="org.hibernate.cache.internal.UpdateTimestampsCache">
        <expiry>
            <ttl>1800</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

